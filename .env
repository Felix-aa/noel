# MySQL settings
# MySQL Host
MYSQL_HOST=mysql
# MySQL Port
MYSQL_PORT=3306
# MySQL root password (only when sharing vars into container) -> remove on prod
MYSQL_ROOT_PASSWORD=secret
# MySQL database name
MYSQL_DATABASE=noel
# MySQL Application user
MYSQL_USER=user
# MySQL application user password
MYSQL_PASSWORD=secret
# Timezone
TZ=GMT

DATABASE_URL="mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@${MYSQL_HOST}:${MYSQL_PORT}/${MYSQL_DATABASE}?serverVersion=8.0"
